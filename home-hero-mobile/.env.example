# Local dev (use your machine's LAN IP when testing on a physical device)
EXPO_PUBLIC_API_BASE_URL=http://10.0.0.229:4000

# Ads
# Comma-separated list of banner unit IDs to rotate between for variety.
# If you only have one banner unit, you can keep a single value.
EXPO_PUBLIC_ADMOB_BANNER_UNIT_IDS=ca-app-pub-9932102016565081/9425093050

# Optional: interstitial ad unit ID override.
# If not set, dev builds use Google test IDs; production falls back to the default in code.
EXPO_PUBLIC_ADMOB_INTERSTITIAL_UNIT_ID=

# Optional: force Google test IDs even outside __DEV__.
EXPO_PUBLIC_ADMOB_USE_TEST_IDS=true

# Interstitials are globally gated by this flag.
# Free tier only sees interstitials when this is true.
EXPO_PUBLIC_ENABLE_INTERSTITIAL_ADS=false

# Payments (Stripe)
# Stripe publishable key used by @stripe/stripe-react-native
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# Legal (hosted URLs)
# If set, the app will open these URLs. If not set, the app shows bundled placeholder screens.
EXPO_PUBLIC_PRIVACY_POLICY_URL=
EXPO_PUBLIC_TERMS_OF_SERVICE_URL=

# Production
# EXPO_PUBLIC_API_BASE_URL=https://home-hero-backend-production.up.railway.app
