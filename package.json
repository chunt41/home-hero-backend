{
  "name": "home-hero-backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "postinstall": "prisma generate",
    "test": "node --test --import tsx src/**/*.test.ts",
    "readiness": "node --test --import tsx src/productionReadiness/**/*.test.ts",
    "lint": "tsc -p tsconfig.json --noEmit",
    "audit": "npm audit --audit-level=critical",
    "ci": "npm run lint && npm test && npm run readiness && npm run audit",
    "build": "tsc -p tsconfig.json",
    "listen": "prisma migrate deploy && node dist/server.js",
    "start": "npm run listen",
    "migrate:deploy": "prisma migrate deploy",
    "migrate:attachments": "tsx scripts/migrateUploadsToObjectStorage.ts",
    "worker": "node dist/worker.js"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.985.0",
    "@aws-sdk/s3-request-presigner": "^3.985.0",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "@sentry/node": "^10.38.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.2",
    "node-fetch": "^3.3.2",
    "pg": "^8.16.3",
    "prisma": "^7.3.0",
    "redis": "^4.7.1",
    "stripe": "^20.1.0",
    "zipcodes": "^8.0.0",
    "zod": "^3.25.76"
  },
  "overrides": {
    "hono": "4.11.7"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.0.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.4.0"
  }
}
